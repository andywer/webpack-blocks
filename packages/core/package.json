{
  "name": "@webpack-blocks/core",
  "version": "0.4.0",
  "description": "Functional approach to compose your webpack config.",
  "main": "lib/index",
  "license": "MIT",
  "author": "Andy Wermke <andy@dev.next-step-software.com>",
  "scripts": {
    "build": "babel src/ -d lib/ --source-maps",
    "test": "standard && ava src/**/__tests__",
    "prepublish": "npm run build && npm test"
  },
  "keywords": [
    "webpack",
    "webpack-blocks",
    "block",
    "feature",
    "functional"
  ],
  "ava": {
    "babel": {
      "plugins": [
        [
          "transform-object-rest-spread",
          {
            "useBuiltIns": true
          }
        ]
      ],
      "presets": [
        "@ava/stage-4"
      ]
    },
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "repository": "andywer/webpack-blocks",
  "bugs": "https://github.com/andywer/webpack-blocks/issues",
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.0.0",
    "ava": "^0.18.0",
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.18.0",
    "sinon": "^1.17.6",
    "standard": "^8.1.0",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "webpack-merge": "^2.3.1"
  }
}
