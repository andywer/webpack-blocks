{
  "private": true,
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "format": "prettier \"**/*.{js,ts,tsx,md}\" --write --loglevel warn",
    "test": "prettier \"**/*.{js,ts,tsx,md}\" --list-different && yarn lint && ava"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.7",
    "eslint": "^5.6.1",
    "lerna": "^3.4.3",
    "prettier": "^1.14.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always"
  }
}
