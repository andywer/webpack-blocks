{
  "private": true,
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "format": "prettier \"**/*.{js,ts,tsx,md}\" --write --loglevel warn",
    "test": "prettier \"**/*.{js,ts,tsx,md}\" --list-different && yarn lint && ava"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.4",
    "eslint": "5.0.0-alpha.2",
    "lerna": "^2.10.2",
    "prettier": "^1.13.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always"
  }
}
