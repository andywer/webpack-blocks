{
  "private": true,
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "format": "prettier \"**/*.{js,ts,tsx,md}\" --write --loglevel warn",
    "test": "prettier \"**/*.{js,ts,tsx,md}\" --list-different && yarn lint && ava"
  },
  "devDependencies": {
    "ava": "^2.0.0",
    "eslint": "^5.16.0",
    "lerna": "^3.15.0",
    "prettier": "^1.14.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "resolutions": {
    "**/**/fstream": "^1.0.12",
    "**/**/js-yaml": "^3.13.1",
    "**/node-sass/node-gyp/tar": "^2.2.2"
  }
}
